<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apa itu ONNX?"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_extrabold"
                android:textSize="28sp"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/contentTab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ONNX (Open Neural Network Exchange) adalah format model lintas platform yang memungkinkan model machine learning digunakan di berbagai framework berbeda. Tujuan utamanya adalah mempermudah proses deployment, meningkatkan kompatibilitas, dan mengurangi ketergantungan framework.\n\nManfaat ONNX meliputi fleksibilitas, kemudahan porting model, dan dukungan ekosistem yang luas.\n\nContoh penggunaan ONNX di dunia nyata: Model deep learning yang dilatih di PyTorch dapat diekspor ke ONNX lalu dijalankan di aplikasi mobile, web, atau server yang menggunakan runtime ONNX seperti ONNX Runtime."
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
