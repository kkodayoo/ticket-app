<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTab3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konversi Model ke ONNX"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_extrabold"
                android:textSize="28sp"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/contentTab3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ONNX mendukung konversi dari berbagai framework:\n\n• PyTorch → menggunakan torch.onnx.export\n• TensorFlow → menggunakan tf2onnx atau keras2onnx\n• Scikit-learn → menggunakan skl2onnx\n\nDengan proses konversi ini, model dapat dipindahkan ke platform lain tanpa perlu training ulang. ONNX menjembatani perbedaan arsitektur antar framework sehingga deployment menjadi lebih fleksibel."
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
